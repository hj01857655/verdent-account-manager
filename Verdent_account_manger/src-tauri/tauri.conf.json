{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Verdent Account Manager",
  "version": "1.4.0",
  "identifier": "ai.verdent.account-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:53252",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Verdent Account Manager",
        "width": 800,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources/verdent_auto_register.exe",
      "../resources/verdent_auto_register.py",
      "../resources/verdent_auto_register_wrapper.py",
      "verdent-account-manager.exe.manifest"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {}
}
